{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++.exe build active file",
            "command": "g++",
            "args": [
                "${file}",
                "-std=c++17",
                "-I",
                ".",
                "-o",
                "${fileBasenameNoExtension}",
                ";",
                "./${fileBasenameNoExtension}",
                ";",
                "./${fileBasenameNoExtension}",
                ";",
                "./${fileBasenameNoExtension}",
                ";",
                "./${fileBasenameNoExtension}",
                ";",
                "./${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}